// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique
  name          String?
  email         String?   @unique
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  plants        Plant[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Plant {
  id              Int             @id @default(autoincrement())
  name            String
  species         String?
  imageUrl        String?         @db.LongText
  lastWatered     DateTime?
  stage           PlantStage      @default(SEED)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  userId          String
  user            User            @relation(fields: [userId], references: [id])
  protocolEntries ProtocolEntry[]
  isHarvested     Boolean         @default(false)
  harvestedAmount Float?
  images          PlantImage[]
  seedDate        DateTime?
  seedlingDate    DateTime?
  vegetativeDate  DateTime?
  floweringDate   DateTime?
  ripeningDate    DateTime?
}

model ProtocolEntry {
  id          Int      @id @default(autoincrement())
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  plantId     Int
  plant       Plant    @relation(fields: [plantId], references: [id])
}

model PlantImage {
  id           Int      @id @default(autoincrement())
  imageUrl     String         @db.LongText
  thumbnailUrl String         @db.LongText @default("/images/default-thumbnail.jpg")
  plantId      Int
  plant        Plant    @relation(fields: [plantId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum PlantStage {
  SEED
  SEEDLING
  VEGETATIVE
  FLOWERING
  RIPENING
  HARVESTED
}